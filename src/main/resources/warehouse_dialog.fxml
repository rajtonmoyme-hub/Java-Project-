<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" styleClass="dialog-container" stylesheets="@css/warehouse_dialog.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodprice.WarehouseDialogController">
    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></padding>

    <Label styleClass="dialog-title" text="নতুন গুদাম যোগ করুন" />

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="550.0" styleClass="dialog-scroll">
        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints percentWidth="50.0" />
                <ColumnConstraints percentWidth="50.0" />
            </columnConstraints>

            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="গুদামের নাম" styleClass="form-label"/>
                <TextField fx:id="tfWarehouseName" styleClass="form-field" />
            </VBox>
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="মালিকের নাম" styleClass="form-label"/>
                <TextField fx:id="tfOwnerName" styleClass="form-field" />
            </VBox>

            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="মালিকানার ধরন" styleClass="form-label"/>
                <ComboBox fx:id="cbType" maxWidth="Infinity" styleClass="form-field" />
            </VBox>
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label text="অঞ্চল" styleClass="form-label"/>
                <ComboBox fx:id="cbRegion" maxWidth="Infinity" styleClass="form-field" />
            </VBox>

            <VBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="2">
                <Label text="ঠিকানা" styleClass="form-label"/>
                <TextField fx:id="tfAddress" styleClass="form-field" />
            </VBox>

            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <Label text="ধারণক্ষমতা (MT)" styleClass="form-label"/>
                <TextField fx:id="tfCapacity" styleClass="form-field" />
            </VBox>
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Label text="বর্তমান মজুদ (MT)" styleClass="form-label"/>
                <TextField fx:id="tfStock" styleClass="form-field" />
            </VBox>

            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <Label text="লাইসেন্স নম্বর" styleClass="form-label"/>
                <TextField fx:id="tfLicense" styleClass="form-field" />
            </VBox>
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <Label text="লাইসেন্স মেয়াদ" styleClass="form-label"/>
                <DatePicker fx:id="dpExpiry" maxWidth="Infinity" styleClass="form-field" />
            </VBox>

            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="5">
                <Label text="যোগাযোগ নম্বর" styleClass="form-label"/>
                <TextField fx:id="tfContact" styleClass="form-field" />
            </VBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="essential-box" GridPane.columnSpan="2" GridPane.rowIndex="6">
                <ToggleButton fx:id="btnColdStorage" styleClass="toggle-button" />
                <Label text="কোল্ড স্টোরেজ সুবিধা আছে" styleClass="form-label" />
            </HBox>
        </GridPane>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="15.0">
        <Button onAction="#handleCancel" prefHeight="45.0" prefWidth="200.0" styleClass="btn-cancel-modern" text="বাতিল" />
        <Button onAction="#handleSave" prefHeight="45.0" prefWidth="280.0" styleClass="btn-save-modern" text="যোগ করুন" />
    </HBox>
</VBox>
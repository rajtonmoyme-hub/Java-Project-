<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="sidebar-scroll" stylesheets="@css/sidebar.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodprice.SidebarController">
    <content>
        <!-- fx:id="sidebarRoot" যোগ করা হয়েছে কন্ট্রোলারের জন্য -->
        <VBox fx:id="sidebarRoot" prefWidth="250.0" spacing="4.0" styleClass="sidebar">
            <padding><Insets bottom="20" left="15" right="15" top="25" /></padding>

            <!-- Logo Area (Leaf Icon like the picture) -->
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="logo-container">
                <StackPane styleClass="logo-icon-bg">
                    <!-- Leaf SVG Path -->
                    <SVGPath content="M17,8C8,10 5.9,16.17 3.82,21.34L5.71,22L6.66,19.7C7.14,19.87 7.64,20 8,20C19,20 22,3 22,3C21,11 14,9 14,9C14,9 17.06,13.06 15,15C13,17 10.15,14.2 10.15,14.2C10.15,14.2 14.12,12.22 13,10C11.6,7.21 8,10 8,10C8,10 10.32,11.32 9,13C7.2,15.33 3.5,12 3.5,12C3.5,12 8,2 17,8Z" styleClass="logo-svg" scaleX="1.3" scaleY="1.3" />
                </StackPane>
                <VBox>
                    <Label styleClass="logo-text" text="খাদ্য মূল্য" />
                    <Label styleClass="logo-subtitle" text="Smart Food Price System" />
                </VBox>
                <VBox.margin><Insets bottom="20.0" /></VBox.margin>
            </HBox>

            <!-- Menu Items (কোনটিতেই active লেখা নেই, কন্ট্রোলার নিজে বসাবে) -->
            <Button fx:id="btnDashboard" maxWidth="Infinity" onAction="#goToDashboard" styleClass="menu-button" text="ড্যাশবোর্ড">
                <graphic><SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" /></graphic>
            </Button>

            <Button fx:id="btnProducts" maxWidth="Infinity" onAction="#goToProducts" styleClass="menu-button" text="পণ্য ব্যবস্থাপনা">
                <graphic><SVGPath content="M20 6h-4V4c0-1.11-.89-2-2-2h-4c-1.11 0-2 .89-2 2v2H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h18c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-6 0h-4V4h4v2z" /></graphic>
            </Button>

            <Button fx:id="btnPriceTracker" maxWidth="Infinity" onAction="#goToPriceTracker" styleClass="menu-button" text="মূল্য ট্র্যাকার">
                <graphic><SVGPath content="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z" /></graphic>
            </Button>

            <Button fx:id="btnSupplyChain" maxWidth="Infinity" onAction="#goToSupplyChain" styleClass="menu-button" text="সাপ্লাই চেইন">
                <graphic><SVGPath content="M20 8h-3V4H3v4h-1v2h1v10h18V10h1V8zM5 18v-8h14v8H5z" /></graphic>
            </Button>

            <Button fx:id="btnWarehouse" maxWidth="Infinity" onAction="#goToWarehouse" styleClass="menu-button" text="গুদাম ও মজুদ">
                <graphic><SVGPath content="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-6l-2-2z" /></graphic>
            </Button>

            <Button fx:id="btnImport" maxWidth="Infinity" onAction="#goToImport" styleClass="menu-button" text="আমদানি রেকর্ড">
                <graphic><SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" /></graphic>
            </Button>

            <Button fx:id="btnFarmers" maxWidth="Infinity" onAction="#goToFarmers" styleClass="menu-button" text="কৃষক প্ল্যাটফর্ম">
                <graphic><SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" /></graphic>
            </Button>

            <Button fx:id="btnWeather" maxWidth="Infinity" onAction="#goToWeather" styleClass="menu-button" text="আবহাওয়া প্রভাব">
                <graphic><SVGPath content="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96z" /></graphic>
            </Button>

            <Button fx:id="btnAlerts" maxWidth="Infinity" onAction="#goToAlerts" styleClass="menu-button" text="অ্যালার্ট সিস্টেম">
                <graphic><SVGPath content="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z" /></graphic>
            </Button>

            <Button fx:id="btnForecast" maxWidth="Infinity" onAction="#goToForecast" styleClass="menu-button" text="চাহিদা পূর্বাভাস">
                <graphic><SVGPath content="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" /></graphic>
            </Button>

            <Button fx:id="btnReports" maxWidth="Infinity" onAction="#goToReports" styleClass="menu-button" text="রিপোর্ট ও বিশ্লেষণ">
                <graphic><SVGPath content="M10 20h4V4h-4v16zm-6 0h4v-8H4v8zM16 9v11h4V9h-4z" /></graphic>
            </Button>

            <Button fx:id="btnAudit" maxWidth="Infinity" onAction="#goToAudit" styleClass="menu-button" text="অডিট লগ">
                <graphic><SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" /></graphic>
            </Button>

            <Region VBox.vgrow="ALWAYS" />

            <!-- Government Info Footer -->
            <VBox alignment="CENTER" spacing="5" styleClass="sidebar-footer">
                <Label styleClass="govt-text" text="বাংলাদেশ সরকার" />
                <Label styleClass="dept-text" text="খাদ্য মন্ত্রণালয় • TCB • DAM" />
            </VBox>
        </VBox>
    </content>
</ScrollPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@css/admin_registration.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodprice.AdminRegistrationController">

    <StackPane styleClass="bg-image-layer" />

    <VBox alignment="CENTER" maxWidth="430" maxHeight="-Infinity" spacing="15" styleClass="registration-card">
        <padding><Insets bottom="25.0" left="35.0" right="35.0" top="25.0" /></padding>

        <VBox alignment="CENTER" spacing="2">
            <Label styleClass="form-title" text="নতুন অ্যাডমিন একাউন্ট" />
            <Label styleClass="form-subtitle" text="সিস্টেম অ্যাক্সেস পেতে আপনার তথ্য দিন" />
        </VBox>

        <VBox spacing="10">
            <TextField fx:id="tfName" promptText="আপনার নাম" styleClass="modern-input" />
            <HBox spacing="10">
                <TextField fx:id="tfEmail" promptText="ইমেইল" styleClass="modern-input" HBox.hgrow="ALWAYS" />
                <TextField fx:id="tfPhone" promptText="মোবাইল নম্বর" styleClass="modern-input" HBox.hgrow="ALWAYS" />
            </HBox>
            <PasswordField fx:id="pfPassword" promptText="নতুন পাসওয়ার্ড" styleClass="modern-input" />
            <PasswordField fx:id="pfConfirmPassword" promptText="পাসওয়ার্ড নিশ্চিত করুন" styleClass="modern-input" />
            <Label fx:id="lblMessage" managed="false" styleClass="message-label" visible="false" wrapText="true" />
        </VBox>

        <Button maxWidth="Infinity" onAction="#handleRegistration" prefHeight="40" styleClass="btn-register" text="রেজিস্ট্রেশন করুন" />

        <HBox alignment="CENTER" spacing="5">
            <Label style="-fx-text-fill: #64748B; -fx-font-size: 12px;" text="আগেই একাউন্ট করেছেন?" />
            <Hyperlink onAction="#goToAdminLogin" styleClass="link-text" text="অ্যাডমিন লগইন" />
        </HBox>
    </VBox>
</StackPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodprice.AdminLoginController" stylesheets="@css/admin_login.css">

    <StackPane styleClass="bg-image-layer"/>

    <VBox alignment="CENTER" maxWidth="420" maxHeight="-Infinity" spacing="20" styleClass="login-card">
        <padding><Insets top="30" right="35" bottom="30" left="35"/></padding>

        <VBox alignment="CENTER" spacing="5">
            <Label text="প্রশাসনিক লগইন" styleClass="login-title"/>
            <Label text="সিস্টেম অ্যাক্সেস করতে লগইন করুন" styleClass="form-subtitle"/>
        </VBox>

        <VBox spacing="15">
            <TextField fx:id="tfEmail" promptText="ইমেইল" styleClass="modern-input"/>
            <PasswordField fx:id="pfPassword" promptText="পাসওয়ার্ড" styleClass="modern-input"/>
            <TextField fx:id="tfCode" promptText="ইউনিক কোড" styleClass="modern-input"/>
            <Label fx:id="lblError" styleClass="error-label" visible="false" managed="false" wrapText="true"/>
        </VBox>

        <Button fx:id="btnLogin" text="লগইন" maxWidth="Infinity" prefHeight="45" onAction="#handleLogin" styleClass="login-button"/>

        <!-- Navigation Links -->
        <HBox alignment="CENTER" spacing="10">
            <Hyperlink text="অ্যাডমিন রেজিস্ট্রেশন" onAction="#goToAdminRegistration" styleClass="link-text"/>
            <Label text="|" style="-fx-text-fill: #CBD5E1;"/>
            <Hyperlink text="ইউজার লগইন" onAction="#goToUserLogin" styleClass="link-text"/>
        </HBox>
    </VBox>
</StackPane>
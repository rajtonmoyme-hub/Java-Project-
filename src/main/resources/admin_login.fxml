<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.foodprice.AdminLoginController"
           stylesheets="@css/admin_login.css"> <!-- এখানে পথটি CSS ফোল্ডার অনুযায়ী ঠিক করা হয়েছে -->

    <!-- Background layer -->
    <StackPane styleClass="background-layer"/>

    <HBox alignment="CENTER" spacing="60" maxWidth="1100" maxHeight="680">
        <!-- Left side - Visual / Branding -->
        <VBox alignment="CENTER" spacing="30" styleClass="visual-panel">
            <ImageView fitHeight="450" fitWidth="450" preserveRatio="true">
                <image>
                    <!-- @ চিহ্নটি ব্যবহার করা হয় রিসোর্স ফোল্ডার থেকে ফাইল লোড করতে -->
                    <Image url="@images/admin-bg.jpg" />
                </image>
            </ImageView>

            <VBox alignment="CENTER" spacing="8">
                <Label text="Price Tracker" styleClass="brand-title"/>
                <Label text="Admin Portal" styleClass="brand-subtitle"/>
            </VBox>
        </VBox>

        <!-- Right side - Login Card -->
        <VBox alignment="CENTER" spacing="35" styleClass="login-card" maxWidth="480">
            <VBox alignment="CENTER" spacing="12">
                <Label text="ADMIN LOGIN" styleClass="login-title"/>
                <Label text="Secure access to Admin" styleClass="login-subtitle"/>
            </VBox>

            <VBox spacing="18">
                <VBox spacing="6">
                    <Label text="Admin Email / ID" styleClass="field-label"/>
                    <TextField fx:id="tfEmail" promptText="admin@agridirect.com" styleClass="modern-input"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Admin Password" styleClass="field-label"/>
                    <PasswordField fx:id="pfPassword" promptText="••••••••••••" styleClass="modern-input"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Code" styleClass="field-label"/>
                    <TextField fx:id="tfCode" promptText="Enter 6-digit code" styleClass="modern-input"/>
                </VBox>

                <Label fx:id="lblError" styleClass="error-label" visible="false" managed="false"/>
            </VBox>

            <Button fx:id="btnLogin" text="LOGIN" prefWidth="240" prefHeight="52"
                    onAction="#handleLogin" styleClass="login-button"/>

            <VBox alignment="CENTER" spacing="8">
                <Hyperlink text="Forgot Password?" styleClass="link"/>
                <Hyperlink text="Two-Factor Authentication Setup" styleClass="link"/>
            </VBox>
        </VBox>
    </HBox>

</StackPane>